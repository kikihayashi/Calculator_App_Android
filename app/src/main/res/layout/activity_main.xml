<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Calculator"
            android:textColor="#FFF"
            android:background="#1B2032"
            android:gravity="center"
            android:textSize="25dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="#787878"
            ></TextView>

        <TextView
            android:id="@+id/show2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#565656"
            android:textSize="25dp"
            android:background="#0F0F0F"
            android:gravity="right"
            ></TextView>


        <TextView
            android:id="@+id/show1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textColor="#FFF"
            android:textSize="50dp"
            android:text=" "
            android:background="#0F0F0F"
            android:gravity="right"
            ></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:paddingHorizontal="2dp"
            android:background="#333333">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/B_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#747474"
                    android:onClick="Clear"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:text="C"
                    android:textSize="30dp"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/B_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#747474"
                    android:text="B"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Back"></Button>

                <Button
                    android:id="@+id/B_square"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#747474"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:text="S"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:onClick="Square"></Button>

                <Button
                    android:id="@+id/B_except"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#001832"
                    android:text="/"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Calculate"></Button>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/B7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="7"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="8"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="9"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B_multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#001832"
                    android:text="*"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Calculate"></Button>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/B4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="4"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="5"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="6"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#001832"
                    android:text="-"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Calculate"></Button>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/B1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="1"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="2"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="3"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#001832"
                    android:text="+"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Calculate"></Button>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/B_reverse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="+/-"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Reverse"></Button>

                <Button
                    android:id="@+id/B0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="0"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Input"></Button>

                <Button
                    android:id="@+id/B_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#060606"
                    android:text="."
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Point"></Button>

                <Button
                    android:id="@+id/B_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#D6DDE7"
                    android:text="="
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:onClick="Result"></Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>